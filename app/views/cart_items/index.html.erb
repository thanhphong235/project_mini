<h2 class="mb-4 d-flex align-items-center gap-3">
    <%= link_to "Quay lại", food_drinks_path, class: "btn btn-secondary" %>
    Giỏ hàng của bạn
</h2>

<% if @cart_items.any? %>

<!-- ✅ Khung Turbo Frame chứa bảng giỏ hàng -->
<%= turbo_frame_tag "cart-items" do %>
<%= render partial: "cart_items/cart_items_table", locals: { cart_items: @cart_items } %>
<% end %>

<!-- ✅ Khung Turbo Frame chứa phần tổng cộng & đặt hàng -->
<%= turbo_frame_tag "cart-summary" do %>
<div class="text-end mt-3">
    <p class="fs-5">
        <strong>Tổng cộng:</strong>
        <span class="fw-bold text-success"><%= number_to_currency(@total_price, unit: "₫") %></span>
    </p>
    <%= button_to "Đặt hàng", orders_path, method: :post, class: "btn btn-success btn-lg shadow-sm" %>
</div>
<% end %>

<% else %>
<div class="alert alert-info mt-4 text-center">
    Giỏ hàng của bạn đang trống.
</div>
<% end %>