<div class="suggestion-update-dark">

    <!-- Header -->
    <div class="header-dark">
        <%= link_to "← Quay lại", admin_suggestions_path, class: "btn-back-dark" %>

        <h1 class="update-title-dark">Cập nhật trạng thái góp ý</h1>
        <div class="header-placeholder-dark"></div>
    </div>

    <!-- Detail Section -->
    <div class="detail-box-dark">

        <div class="detail-row-dark">
            <div class="label-dark">Người gửi</div>
            <div class="value-dark"><%= @suggestion.user.name || @suggestion.user.email %></div>
        </div>

        <div class="detail-row-dark">
            <div class="label-dark">Tiêu đề</div>
            <div class="value-dark"><%= @suggestion.title %></div>
        </div>

        <div class="detail-row-dark">
            <div class="label-dark">Nội dung</div>
            <div class="value-dark content-dark"><%= simple_format(@suggestion.content) %></div>
        </div>

    </div>

    <!-- Form -->
    <%= form_with model: [:admin, @suggestion], local: true, html: { class: "form-dark" } do |f| %>

    <div class="detail-row-dark mb-4">
        <div class="label-dark">Trạng thái</div>
        <div class="value-dark">
            <%= f.select :status,
                [["Chờ duyệt", "pending"], ["Chấp nhận", "approved"], ["Từ chối", "rejected"]],
                {},
                class: "select-dark"
            %>
        </div>
    </div>

    <div class="form-actions-dark">
        <%= f.submit "Lưu", class: "btn-save-dark" %>
    </div>

    <% end %>

</div>

<style>
    /* ===========================
   DARK PREMIUM GLASS UI
   =========================== */

    .suggestion-update-dark {
        background: rgba(20, 20, 20, 0.55);
        border-radius: 28px;
        padding: 48px 50px;
        backdrop-filter: blur(12px) saturate(140%);
        -webkit-backdrop-filter: blur(12px) saturate(140%);
        border: 1px solid rgba(255, 255, 255, 0.08);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.55);
        max-width: 880px;
        margin: 50px auto;
        color: #f1f1f1;
    }

    /* Header */
    .header-dark {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 32px;
    }

    .update-title-dark {
        flex-grow: 1;
        text-align: center;
        font-size: 2rem;
        font-weight: 800;
        color: #ffffff;
    }

    .header-placeholder-dark {
        width: 120px;
    }

    /* Back Button */
    .btn-back-dark {
        padding: 10px 22px;
        border-radius: 12px;
        font-weight: 500;
        background: rgba(255, 255, 255, 0.08);
        color: #f1f1f1;
        border: 1px solid rgba(255, 255, 255, 0.12);
        transition: 0.25s;
    }

    .btn-back-dark:hover {
        background: rgba(255, 255, 255, 0.16);
        transform: translateY(-2px);
    }

    /* Detail Rows */
    .detail-box-dark {
        display: flex;
        flex-direction: column;
    }

    .detail-row-dark {
        display: grid;
        grid-template-columns: 160px 1fr;
        gap: 20px;
        align-items: start;
        padding: 14px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.12);
    }

    .label-dark {
        font-size: 0.9rem;
        font-weight: 600;
        text-transform: uppercase;
        color: #bfbfbf;
    }

    .value-dark {
        font-size: 1.05rem;
        font-weight: 500;
        color: #ffffff;
    }

    .content-dark p {
        margin: 0;
        line-height: 1.6;
    }

    /* Select input */
    .select-dark {
        padding: 10px 14px;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.12);
        background: rgba(255, 255, 255, 0.1);
        font-weight: 500;
        color: #fff;
        width: 100%;
        transition: 0.25s;
    }

    .select-dark option {
        background: #1f1f1f;
        color: white;
    }

    .select-dark:focus {
        border-color: #4f7cff;
        box-shadow: 0 0 8px rgba(79, 124, 255, 0.45);
    }

    /* Save Button */
    .form-actions-dark {
        margin-top: 24px;
    }

    .btn-save-dark {
        padding: 12px 28px;
        background: linear-gradient(135deg, #4f7cff, #2e56d6);
        border-radius: 14px;
        font-weight: 700;
        color: white !important;
        box-shadow: 0 4px 18px rgba(60, 100, 255, 0.3);
        transition: 0.25s;
    }

    .btn-save-dark:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 24px rgba(60, 100, 255, 0.45);
    }
</style>