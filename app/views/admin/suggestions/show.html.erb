<div class="suggestion-detail">

    <h2>Chi tiết Góp ý</h2>

    <div class="detail-row">
        <span class="label">Người gửi:</span>
        <span class="value"><%= @suggestion.user.name || @suggestion.user.email %></span>
    </div>

    <div class="detail-row">
        <span class="label">Tiêu đề:</span>
        <span class="value"><%= @suggestion.title %></span>
    </div>

    <div class="detail-row">
        <span class="label">Nội dung:</span>
        <span class="value"><%= simple_format(@suggestion.content) %></span>
    </div>

    <div class="detail-row">
        <span class="label">Trạng thái:</span>
        <span class="value"><%= @suggestion.status || "pending" %></span>
    </div>

    <hr>

    <div class="detail-actions">
        <%= link_to "Quay lại", admin_suggestions_path, class: "btn btn-secondary" %>
        <%= link_to "Sửa", edit_admin_suggestion_path(@suggestion), class: "btn btn-warning" %>
    </div>

</div>