<h2 class="text-center text-primary mb-4">✏️ Chỉnh sửa Danh mục</h2>

<div class="row justify-content-center mt-3">
    <div class="col-sm-10 col-md-7 col-lg-5">
        <div class="card dark-card shadow-lg rounded-4 p-4 animate-fade-in">

            <%= form_with(model: [:admin, @category], local: true) do |f| %>

            <!-- List group -->
            <ul class="list-group list-group-flush mb-4 dark-list">
                <li class="list-group-item d-flex justify-content-between align-items-center dark-item">
                    <strong class="text-light">Tên danh mục:</strong>
                    <%= f.text_field :name,
                class: "form-control bg-dark text-light border-secondary w-75",
                placeholder: "Nhập tên danh mục" %>
                </li>

                <li class="list-group-item d-flex justify-content-between align-items-center dark-item">
                    <strong class="text-light">Ngày tạo:</strong>
                    <span class="text-muted"><%= @category.created_at.strftime("%d/%m/%Y %H:%M") %></span>
                </li>

                <li class="list-group-item d-flex justify-content-between align-items-center dark-item">
                    <strong class="text-light">Ngày cập nhật:</strong>
                    <span class="text-muted"><%= @category.updated_at.strftime("%d/%m/%Y %H:%M") %></span>
                </li>
            </ul>

            <!-- Buttons -->
            <div class="d-flex justify-content-between gap-3 mt-3 flex-nowrap">
                <%= link_to "Quay lại", admin_categories_path,
                class: "btn btn-outline-light flex-fill btn-anim" %>

                <%= f.submit "Lưu thay đổi",
                class: "btn btn-success flex-fill btn-anim" %>
            </div>

            <% end %>

        </div>
    </div>
</div>

<style>
    /* Card tối */
    .dark-card {
        background: #1a1a1a !important;
        border: 1px solid #333 !important;
        color: #e6e6e6 !important;
    }

    /* List group tối */
    .dark-list .list-group-item {
        background-color: #1a1a1a !important;
        border-color: #2d2d2d !important;
        color: #e6e6e6 !important;
    }

    .dark-item strong {
        color: #f1f1f1 !important;
    }

    /* Fade in animation */
    .animate-fade-in {
        animation: fadeIn 0.5s ease forwards;
        opacity: 0;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(8px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Button animation */
    .btn-anim {
        transition: 0.25s ease;
    }

    .btn-anim:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(255, 255, 255, 0.15);
    }
</style>