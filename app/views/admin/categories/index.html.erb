<h1><%= link_to "Quay lại", admin_dashboard_path, class: "btn btn-secondary" %> Quản lý Danh mục</h1>

<%= link_to "Thêm mới danh mục", new_admin_category_path, class: "btn btn-success mb-3" %>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Tên danh mục</th>
            <th>Ngày tạo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @categories.each_with_index do |category, index| %>
        <tr>
            <td><%= index + 1 %></td>
            <td><%= category.name %></td>
            <td><%= category.created_at.strftime("%d/%m/%Y") %></td>
            <td>
                <%= link_to "Xem", admin_category_path(category), class: "btn btn-sm btn-outline-primary me-1" %>
                <%= link_to "Chỉnh sửa", edit_admin_category_path(category), class: "btn btn-sm btn-outline-warning me-1" %>

                <%# Link Xóa Turbo-safe với confirm %>
                <%= link_to "Xóa", admin_category_path(category),
                data: { turbo_method: :delete,
                        turbo_confirm: "Bạn có chắc chắn muốn xóa danh mục này?" },
                class: "btn btn-sm btn-outline-danger" %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>