<h2 class="text-center text-primary mb-4">➕ Thêm mới Danh mục</h2>

<div class="row justify-content-center mt-3">
    <div class="col-sm-10 col-md-7 col-lg-5">

        <div class="card shadow rounded-4 border-0 p-4 bg-dark text-light">

            <%= form_with(model: [:admin, @category], local: true) do |f| %>

            <!-- Form fields -->
            <ul class="list-group list-group-flush mb-4">
                <li class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
                    <strong>Tên danh mục:</strong>
                    <%= f.text_field :name, class: "form-control w-75", placeholder: "Nhập tên danh mục" %>
                </li>
            </ul>

            <!-- Buttons -->
            <div class="d-flex gap-3">
                <%= link_to "Quay lại",
                admin_categories_path,
                class: "btn btn-outline-light flex-grow-1" %>

                <%= f.submit "Thêm mới",
                class: "btn btn-success flex-grow-1" %>
            </div>

            <% end %>

        </div>

    </div>
</div>