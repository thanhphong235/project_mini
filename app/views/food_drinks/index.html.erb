<h1>Danh sách Món ăn & Thức uống</h1>

<div class="mb-3">
    <%= link_to "Tất cả", food_drinks_path, class: "btn btn-secondary me-2" %>
    <% Category.all.each do |cat| %>
    <%= link_to cat.name, food_drinks_path(category_id: cat.id), class: "btn btn-primary me-2" %>
    <% end %>
</div>

<div class="row">
    <% @food_drinks.each do |fd| %>
    <div class="col-md-3 mb-3">
        <div class="card">
            <% if fd.image.attached? %>
            <%= image_tag fd.image, class: "card-img-top", style: "height:150px; object-fit:cover;" %>
            <% end %>
            <div class="card-body">
                <h5 class="card-title"><%= fd.name %></h5>
                <p class="card-text">Giá: <%= number_to_currency(fd.price, unit: "₫") %></p>
                <%= link_to "Xem chi tiết", food_drink_path(fd), class: "btn btn-primary btn-sm" %>
                <%= link_to "Thêm giỏ hàng", food_drink_path(fd), class: "btn btn-primary btn-sm" %>
                <%= link_to "Mua", food_drink_path(fd), class: "btn btn-primary btn-sm" %>
            </div>
        </div>
    </div>
    <% end %>
</div>