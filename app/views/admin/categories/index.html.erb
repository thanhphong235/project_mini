<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
    <%= link_to "Quay lại", admin_dashboard_path, class: "btn btn-outline-secondary mb-2" %>
    <h1 class="text-center flex-grow-1 mb-0">Quản lý Danh mục</h1>
</div>

<div class="d-flex justify-content-end mb-3">
    <%= link_to new_admin_category_path, class: "btn btn-success" do %>
    <i class="bi bi-plus-lg"></i> Thêm mới danh mục
    <% end %>
</div>

<div class="table-responsive shadow-sm rounded mt-3">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-dark text-center">
            <tr>
                <th style="width:10%;">#</th>
                <th style="width:40%;" class="text-start">Tên danh mục</th>
                <th style="width:25%;">Ngày tạo</th>
                <th style="width:25%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @categories.each_with_index do |category, index| %>
            <tr class="align-middle">
                <td class="text-center"><%= index + 1 %></td>
                <td class="text-start"><%= category.name %></td>
                <td class="text-center"><%= category.created_at.strftime("%d/%m/%Y") %></td>
                <td class="text-center">
                    <div class="d-flex justify-content-center flex-wrap gap-1">
                        <%= link_to admin_category_path(category), class: "btn btn-sm btn-outline-primary", title: "Xem chi tiết" do %>
                        <i class="bi bi-eye"></i> Xem
                        <% end %>

                        <%= link_to edit_admin_category_path(category), class: "btn btn-sm btn-outline-warning", title: "Chỉnh sửa danh mục" do %>
                        <i class="bi bi-pencil"></i> Sửa
                        <% end %>

                        <%= link_to admin_category_path(category),
                    data: { turbo_method: :delete, turbo_confirm: "Bạn có chắc chắn muốn xóa danh mục này?" },
                    class: "btn btn-sm btn-outline-danger", title: "Xóa danh mục" do %>
                        <i class="bi bi-trash"></i> Xóa
                        <% end %>
                    </div>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>