<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h2 class="card-title mb-3">Chi tiết đơn hàng #<%= @order.id %></h2>

        <div class="mb-3">
            <p><strong>Ngày đặt:</strong> <%= @order.created_at.strftime("%d/%m/%Y %H:%M") %></p>
            <p>
                <strong>Trạng thái:</strong>
                <% status_class = case @order.status
           when "pending" then "badge bg-warning text-dark"
           when "confirmed" then "badge bg-primary"
           when "delivered" then "badge bg-success"
           when "cancelled" then "badge bg-danger"
           else "badge bg-secondary"
           end %>
                <span class="<%= status_class %>"><%= @order.status_human %></span>
            </p>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Món ăn / Thức uống</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    <% @order.order_items.each_with_index do |item, index| %>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= item.food_drink.name %></td>
                        <td><%= item.quantity %></td>
                        <td><%= number_to_currency(item.price, unit: "₫") %></td>
                        <td><%= number_to_currency(item.quantity * item.price, unit: "₫") %></td>
                    </tr>
                    <% end %>
                    <tr>
                        <td colspan="4" class="text-end"><strong>Tổng cộng:</strong></td>
                        <td><strong><%= number_to_currency(@order.total_price, unit: "₫") %></strong></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-4">
            <%= link_to "Quay lại lịch sử đơn hàng", orders_path, class: "btn btn-outline-secondary mb-2 mb-md-0" %>
        </div>
    </div>
</div>