<div class="d-flex justify-content-between align-items-center mb-4">
    <%= link_to "Quay lại", admin_dashboard_path, class: "btn btn-outline-secondary" %>
    <h1 class="text-center flex-grow-1 mb-0">Danh sách Đơn hàng</h1>
</div>

<div id="flash_messages"></div>

<%= turbo_frame_tag "orders_table" do %>
<table class="table table-striped table-hover align-middle mt-3">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Người đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Ngày đặt</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        <% @orders.each_with_index do |order, index| %>
        <%= render partial: "order_row", locals: { order: order, index: index + 1 } %>
        <% end %>
    </tbody>
</table>
<% end %>