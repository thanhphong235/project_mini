<% provide(:title, "Sign up") %>

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Sign up</h2>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <!-- Hiện lỗi tổng -->
                <% if resource.errors.any? %>
                <div class="alert alert-danger">
                    <h5 class="mb-2">
                        <%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:
                    </h5>
                    <ul class="mb-0">
                        <% resource.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>

                <!-- Name -->
                <div class="mb-3">
                    <%= f.label :name, class: "form-label" %>
                    <%= f.text_field :name,
                  required: true,
                  class: "form-control #{'is-invalid' if resource.errors[:name].any?}",
                  placeholder: "Enter your name" %>
                    <% if resource.errors[:name].any? %>
                    <div class="invalid-feedback">
                        <%= resource.errors[:name].first %>
                    </div>
                    <% end %>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <%= f.label :email, class: "form-label" %>
                    <%= f.email_field :email,
                  required: true,
                  class: "form-control #{'is-invalid' if resource.errors[:email].any?}",
                  placeholder: "Enter your email" %>
                    <% if resource.errors[:email].any? %>
                    <div class="invalid-feedback">
                        <%= resource.errors[:email].first %>
                    </div>
                    <% end %>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <%= f.label :password, class: "form-label" %>
                    <%= f.password_field :password,
                  required: true,
                  class: "form-control #{'is-invalid' if resource.errors[:password].any?}",
                  placeholder: "Enter your password" %>
                    <% if resource.errors[:password].any? %>
                    <div class="invalid-feedback">
                        <%= resource.errors[:password].first %>
                    </div>
                    <% end %>
                </div>

                <!-- Password confirmation -->
                <div class="mb-3">
                    <%= f.label :password_confirmation, class: "form-label" %>
                    <%= f.password_field :password_confirmation,
                  required: true,
                  class: "form-control #{'is-invalid' if resource.errors[:password_confirmation].any?}",
                  placeholder: "Confirm your password" %>
                    <% if resource.errors[:password_confirmation].any? %>
                    <div class="invalid-feedback">
                        <%= resource.errors[:password_confirmation].first %>
                    </div>
                    <% end %>
                </div>

                <!-- Submit button -->
                <div class="d-grid">
                    <%= f.submit "Sign up", class: "btn btn-primary" %>
                </div>
                <% end %>

                <hr>

                <p class="text-center mb-0">
                    Already have an account? <%= link_to "Log in", new_user_session_path %>
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Kiểm tra form trống bằng JavaScript trước khi submit -->
<script>
    document.addEventListener("turbo:load", () => {
        const form = document.querySelector("form");
        if (!form) return;

        form.addEventListener("submit", (event) => {
            let valid = true;
            form.querySelectorAll("input[required]").forEach(input => {
                if (!input.value.trim()) {
                    valid = false;
                    input.classList.add("is-invalid");
                    if (!input.nextElementSibling || !input.nextElementSibling.classList.contains("invalid-feedback")) {
                        const errorDiv = document.createElement("div");
                        errorDiv.classList.add("invalid-feedback");
                        errorDiv.innerText = "This field can't be blank";
                        input.insertAdjacentElement("afterend", errorDiv);
                    }
                }
            });
            if (!valid) event.preventDefault();
        });
    });
</script>