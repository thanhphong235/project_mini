<h1 class="mb-4 text-center">Chỉnh sửa góp ý</h1>

<div class="card shadow-sm mx-auto" style="max-width: 700px;">
    <div class="card-body">
        <%= form_with model: @suggestion, local: true do |f| %>
        <div class="mb-3">
            <%= f.label :title, "Tên món / thức uống", class: "form-label fw-bold" %>
            <%= f.text_field :title, class: "form-control", placeholder: "Nhập tên món hoặc thức uống..." %>
        </div>

        <div class="mb-3">
            <%= f.label :content, "Nội dung góp ý", class: "form-label fw-bold" %>
            <%= f.text_area :content, rows: 5, class: "form-control", placeholder: "Nhập góp ý của bạn..." %>
        </div>

        <div class="d-flex justify-content-between">
            <%= link_to suggestions_path, class: "btn btn-outline-secondary" do %>
            <i class="bi bi-arrow-left"></i> Quay lại
            <% end %>

            <%= f.submit "Cập nhật", class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
</div>