<!DOCTYPE html>
<html>

<head>
    <title>Foods & Drinks App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- Header / Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm fixed-top">
            <div class="container">
                <%= link_to "Foods & Drinks App", root_path, class: "navbar-brand" %>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <% if user_signed_in? %>
                        <% if current_user.admin? %>
                        <li class="nav-item">
                            <%= link_to "Dashboard", admin_dashboard_path, class: "nav-link" %>
                        </li>
                        <% else %>
                        <li class="nav-item">
                            <%= link_to "Lịch sử đơn hàng", orders_path, class: "nav-link" %>
                        </li>
                        <li class="nav-item">
                            <%= link_to "Shopping", food_drinks_path, class: "nav-link" %>
                        </li>
                        <li class="nav-item ms-3">
                            <%= turbo_frame_tag "cart-count" do %>
                            <%= render "shared/cart_icon" %>
                            <% end %>
                        </li>
                        <% end %>

                        <li class="nav-item">
                            <%= link_to "Profile", edit_user_registration_path, class: "nav-link" %>
                        </li>

                        <li class="nav-item ms-3">
                            <%= link_to "Log out", destroy_user_session_path,
                      data: { turbo_method: :delete, turbo_confirm: "Bạn chắc chắn muốn đăng xuất?" },
                      class: "nav-link text-danger" %>
                        </li>
                        <% else %>
                        <li class="nav-item">
                            <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
                        </li>
                        <li class="nav-item ms-2">
                            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
                        </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow-1" style="padding-top: 80px; padding-bottom: 0;">
        <div class="container mt-4">
            <%= yield %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-light py-3 shadow-sm mt-auto">
        <div class="container text-center">
            <p class="mb-0">© 2025 Foods & Drinks App</p>
        </div>
    </footer>

</body>

</html>