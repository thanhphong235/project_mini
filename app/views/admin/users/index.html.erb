<div class="users-card shadow-lg rounded-4 p-4 animate-fade-in">

    <!-- Header + nút quay lại -->
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
        <%= link_to "Quay lại", admin_dashboard_path, class: "btn btn-outline-secondary btn-anim mb-2" %>
        <h2 class="fw-bold text-center flex-grow-1 mb-0">Quản lý Người dùng</h2>
        <div style="width: 120px;"></div> <!-- placeholder cân layout -->
    </div>

    <!-- Flash messages -->
    <%= turbo_frame_tag "flash_messages" do %>
    <%= render "shared/flash" %>
    <% end %>

    <!-- Table danh sách người dùng -->
    <div class="table-responsive mt-3">
        <table class="table table-hover table-bordered align-middle mb-0 text-center">
            <thead class="table-dark">
                <tr>
                    <th style="width:5%;">#</th>
                    <th style="width:20%;">Name</th>
                    <th style="width:25%;">Email</th>
                    <th style="width:10%;">Role</th>
                    <th style="width:15%;">Created At</th>
                    <th style="width:25%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @users.each_with_index do |user, index| %>
                <tr class="animate-row" id="<%= dom_id(user) %>">
                    <td><%= index + 1 %></td>
                    <td class="text-start"><%= user.name.presence || user.email %></td>
                    <td class="text-start"><%= user.email %></td>
                    <td>
                        <span class="badge bg-info text-dark"><%= user.role %></span>
                    </td>
                    <td><%= user.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                    <td>
                        <div class="d-flex justify-content-center gap-1 flex-wrap">
                            <%= link_to admin_user_path(user), class: "btn btn-sm btn-outline-primary btn-anim", title: "Xem chi tiết" do %>
                            <i class="bi bi-eye"></i> Xem
                            <% end %>

                            <%= link_to admin_user_path(user),
                data: { turbo_method: :delete, turbo_confirm: "Bạn có chắc chắn muốn xóa người dùng này?" },
                class: "btn btn-sm btn-outline-danger btn-anim", title: "Xóa người dùng" do %>
                            <i class="bi bi-trash"></i> Xóa
                            <% end %>
                        </div>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<style>
    .users-card {
        border-radius: 18px;
        border: 1px solid #e0e0e0;
        background-color: #fff;
        padding: 1.5rem;
        transition: 0.3s ease;
    }

    .users-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
    }

    .btn-anim {
        transition: 0.25s ease;
    }

    .btn-anim:hover:not([disabled]) {
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }

    .animate-fade-in {
        animation: fadeIn 0.6s ease forwards;
        opacity: 0;
    }

    .animate-row {
        transition: 0.25s ease, background-color 0.25s ease;
    }

    .animate-row:hover {
        background-color: #f1f6ff !important;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }
</style>