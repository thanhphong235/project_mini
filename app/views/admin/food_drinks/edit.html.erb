<h1>Chỉnh sửa Món ăn/Thức uống</h1>

<%= form_with(model: [:admin, @food_drink], local: true) do |f| %>
<div class="form-group">
    <%= f.label :name, "Tên" %>
    <%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
    <%= f.label :price, "Giá" %>
    <%= f.number_field :price, class: "form-control" %>
</div>

<div class="form-group">
    <%= f.label :category, "Category" %>
    <%= f.text_field :category, class: "form-control" %>
</div>

<div class="form-group">
    <%= f.label :description, "Mô tả" %>
    <%= f.text_area :description, class: "form-control" %>
</div>

<div class="form-group">
    <%= f.label :image, "Ảnh" %>
    <%= f.file_field :image, class: "form-control" %>
    <% if @food_drink.image.attached? %>
    <p>Ảnh hiện tại:</p>
    <%= image_tag @food_drink.image.variant(resize_to_limit: [150, 150]) %>
    <% end %>
</div>

<%= f.submit "Cập nhật", class: "btn btn-primary" %>
<%= link_to "Hủy", admin_food_drinks_path, class: "btn btn-secondary" %>
<% end %>