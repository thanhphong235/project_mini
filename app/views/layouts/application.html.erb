<!DOCTYPE html>
<html>

<head>
    <title>Foods & Drinks App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- Header / Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <%= link_to "Foods & Drinks App", root_path, class: "navbar-brand" %>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <% if user_signed_in? %>

                        <% if current_user.admin? %>
                        <!-- Admin -->
                        <li class="nav-item">
                            <%= link_to "Dashboard", admin_dashboard_path, class: "nav-link" %>
                        </li>
                        <% else %>
                        <!-- Normal User -->
                        <li class="nav-item">
                            <%= link_to "Lịch sử đơn hàng", orders_path, class: "nav-link" %>
                        </li>

                        <!-- Giỏ hàng -->
                        <li class="nav-item ms-3">
                            <%= link_to cart_path, class: "nav-link position-relative" do %>
                            <i class="bi bi-cart-fill" style="font-size: 1.3rem;"></i>

                            <%= turbo_frame_tag "cart-count" do %>
                            <% count = current_user.cart_items.sum(:quantity) %>
                            <% if count > 0 %>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                <%= count %>
                            </span>
                            <% end %>
                            <% end %>
                            <% end %>
                        </li>
                        <% end %>

                        <!-- Profile -->
                        <li class="nav-item">
                            <%= link_to "Profile", edit_user_registration_path, class: "nav-link" %>
                        </li>

                        <!-- Logout -->
                        <li class="nav-item ms-3">
                            <%= link_to "Log out", destroy_user_session_path,
                  data: { turbo_method: :delete, turbo_confirm: "Bạn chắc chắn muốn đăng xuất?" },
                  class: "nav-link text-danger" %>
                        </li>

                        <% else %>
                        <!-- Chưa đăng nhập -->
                        <li class="nav-item">
                            <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
                        </li>
                        <li class="nav-item ms-2">
                            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
                        </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <div class="container mt-4">
            <%= yield %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-light py-3 mt-auto">
        <div class="container text-center">
            <p class="mb-0">© 2025 Foods & Drinks App</p>
        </div>
    </footer>

</body>

</html>