<% provide(:title, "Log in") %>

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Log in</h2>

                <!-- Hiển thị lỗi -->
                <% if resource.errors.any? %>
                <div class="alert alert-danger">
                    <h5 class="mb-2"><%= pluralize(resource.errors.count, "error") %> prohibited this user from signing in:</h5>
                    <ul class="mb-0">
                        <% resource.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
                <% elsif alert %>
                <div class="alert alert-danger"><%= alert %></div>
                <% elsif notice %>
                <div class="alert alert-success"><%= notice %></div>
                <% end %>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                     html: { data: { social_accounts: {
                        google: ["google_user@example.com", "test_google@gmail.com"],
                        facebook: ["fb_user@example.com"],
                        twitter: ["tw_user@example.com"]
                     }.to_json } }) do |f| %>

                <!-- Email -->
                <div class="mb-3">
                    <%= f.label :email, class: "form-label" %>
                    <%= f.email_field :email,
                  required: true,
                  autofocus: true,
                  class: "form-control #{'is-invalid' if resource.errors[:email].any?}",
                  placeholder: "Enter your email" %>
                    <% if resource.errors[:email].any? %>
                    <div class="invalid-feedback"><%= resource.errors[:email].first %></div>
                    <% end %>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <%= f.label :password, class: "form-label" %>
                    <%= f.password_field :password,
                  required: true,
                  class: "form-control #{'is-invalid' if resource.errors[:password].any?}",
                  placeholder: "Enter your password" %>
                    <% if resource.errors[:password].any? %>
                    <div class="invalid-feedback"><%= resource.errors[:password].first %></div>
                    <% end %>
                    <small class="form-text text-muted">
                        <%= link_to "Forgot password?", new_user_password_path %>
                    </small>
                </div>

                <!-- Remember me -->
                <div class="form-check mb-3">
                    <%= f.check_box :remember_me, class: "form-check-input" %>
                    <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
                </div>

                <!-- Submit -->
                <div class="d-grid mb-3">
                    <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
                </div>
                <% end %>

                <hr>

                <!-- Social login buttons -->
                <div class="d-grid gap-2 mb-3">
                    <%= button_to "Đăng nhập với Google", user_google_oauth2_omniauth_authorize_path,
                method: :post, class: "btn btn-outline-danger btn-lg w-100",
                form: { data: { turbo: false } } %>

                    <%= button_to "Sign in with Facebook", user_facebook_omniauth_authorize_path,
                method: :post, class: "btn btn-primary btn-lg w-100",
                form: { data: { turbo: false } } %>

                    <%= button_to "Sign in with Twitter", user_twitter_omniauth_authorize_path,
                method: :post, class: "btn btn-info text-white btn-lg w-100",
                form: { data: { turbo: false } } %>
                </div>

                <p class="text-center mb-0">
                    New user? <%= link_to "Sign up now!", new_user_registration_path %>
                </p>
            </div>
        </div>
    </div>
</div>

<!-- JS kiểm tra input trống & cảnh báo social login -->
<script>
    document.addEventListener("turbo:load", () => {
        const form = document.querySelector("form");
        if (!form) return;

        const socialAccounts = JSON.parse(form.dataset.socialAccounts || "{}");

        form.addEventListener("submit", (event) => {
            let valid = true;

            // Kiểm tra input trống
            form.querySelectorAll("input[required]").forEach(input => {
                if (!input.value.trim()) {
                    valid = false;
                    input.classList.add("is-invalid");
                    if (!input.nextElementSibling || !input.nextElementSibling.classList.contains("invalid-feedback")) {
                        const errorDiv = document.createElement("div");
                        errorDiv.classList.add("invalid-feedback");
                        errorDiv.innerText = "This field can't be blank";
                        input.insertAdjacentElement("afterend", errorDiv);
                    }
                }
            });

            if (!valid) {
                event.preventDefault();
                return;
            }

            // Cảnh báo social login
            const emailInput = form.querySelector('input[type="email"]');
            const emailValue = emailInput.value.trim().toLowerCase();

            for (const [provider, emails] of Object.entries(socialAccounts)) {
                if (emails.includes(emailValue)) {
                    event.preventDefault();

                    const oldAlert = document.querySelector(".alert-warning");
                    if (oldAlert) oldAlert.remove();

                    const alertBox = document.createElement("div");
                    alertBox.classList.add("alert", "alert-warning", "mt-3");
                    alertBox.textContent = `Tài khoản này chỉ có thể đăng nhập bằng ${provider.toUpperCase()}. 
          Vui lòng chọn "Đăng nhập với ${provider.charAt(0).toUpperCase() + provider.slice(1)}".`;

                    form.insertAdjacentElement("beforebegin", alertBox);
                    return;
                }
            }
        });
    });
</script>