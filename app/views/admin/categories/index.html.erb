<div class="categories-card shadow-lg rounded-4 p-4 animate-fade-in dark-panel">

    <!-- Header + Nút quay lại -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <%= link_to "Quay lại", admin_dashboard_path, class: "btn btn-outline-light btn-anim" %>
        <h2 class="fw-bold mb-0 text-center flex-grow-1 title-text">Quản lý Danh mục</h2>
        <div style="width: 120px;"></div>
    </div>

    <!-- Nút thêm mới -->
    <div class="d-flex justify-content-end mb-3">
        <%= link_to new_admin_category_path, class: "btn btn-success btn-anim" do %>
        <i class="bi bi-plus-lg"></i> Thêm mới danh mục
        <% end %>
    </div>

    <!-- Table danh mục -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle mb-0 text-center table-dark">
            <thead>
                <tr>
                    <th style="width:10%;">#</th>
                    <th style="width:40%;" class="text-start">Tên danh mục</th>
                    <th style="width:25%;">Ngày tạo</th>
                    <th style="width:25%;">Actions</th>
                </tr>
            </thead>

            <tbody>
                <% @categories.each_with_index do |category, index| %>
                <tr class="align-middle animate-row">
                    <td class="text-light"><%= index + 1 %></td>
                    <td class="text-start text-light"><%= category.name %></td>
                    <td class="text-light"><%= category.created_at.strftime("%d/%m/%Y") %></td>

                    <td>
                        <div class="d-flex justify-content-center flex-wrap gap-1">
                            <%= link_to admin_category_path(category), class: "btn btn-sm btn-outline-primary btn-anim" do %>
                            <i class="bi bi-eye"></i> Xem
                            <% end %>

                            <%= link_to edit_admin_category_path(category), class: "btn btn-sm btn-outline-warning btn-anim" do %>
                            <i class="bi bi-pencil"></i> Sửa
                            <% end %>

                            <%= link_to admin_category_path(category),
                                data: { turbo_method: :delete, turbo_confirm: "Bạn có chắc chắn muốn xóa danh mục này?" },
                                class: "btn btn-sm btn-outline-danger btn-anim" do %>
                            <i class="bi bi-trash"></i> Xóa
                            <% end %>
                        </div>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>

</div>

<style>
    /* ===========================
   DARK MODE GLOBAL
=========================== */
    body {
        background-color: #0d0d0d !important;
        color: #e6e6e6 !important;
    }

    /* ===========================
   CARD
=========================== */
    .dark-panel {
        background: #1a1a1a !important;
        border: 1px solid #2d2d2d !important;
        border-radius: 16px;
        transition: 0.3s ease;
    }

    .dark-panel:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.5);
    }

    /* ===========================
   TITLE
=========================== */
    .title-text {
        color: #ffffff !important;
        letter-spacing: 0.5px;
    }

    /* ===========================
   BUTTON
=========================== */
    .btn-anim {
        transition: 0.25s ease;
    }

    .btn-anim:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(255, 255, 255, 0.15);
    }

    /* ===========================
   TABLE
=========================== */
    .table-dark {
        background: #1a1a1a !important;
        color: #e6e6e6 !important;
        border-color: #333 !important;
    }

    .table-dark thead th {
        background: #111 !important;
        color: #fff !important;
        border-color: #333 !important;
    }

    .table-dark td,
    .table-dark th {
        background: #1a1a1a !important;
        color: #e6e6e6 !important;
        border-color: #333 !important;
    }

    .table-hover tbody tr:hover {
        background: #262626 !important;
    }

    /* ===========================
   REMOVE WHITE BORDER 100%
=========================== */
    .table-bordered {
        border: 1px solid #333 !important;
    }

    .table-responsive {
        background: transparent !important;
        border: none !important;
    }

    /* ===========================
   ANIMATION
=========================== */
    .animate-row {
        transition: 0.25s ease;
    }

    .animate-row:hover {
        background-color: #262626 !important;
    }

    .animate-fade-in {
        animation: fadeIn 0.5s ease forwards;
        opacity: 0;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>