<h2 class="text-center text-primary mb-4">✏️ Chỉnh sửa Danh mục</h2>

<div class="row justify-content-center mt-3">
    <div class="col-sm-10 col-md-7 col-lg-5">
        <div class="card shadow border-0 rounded p-4">

            <%= form_with(model: [:admin, @category], local: true) do |f| %>
            <!-- Form fields dưới dạng list-group -->
            <ul class="list-group list-group-flush mb-4">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Tên danh mục:</strong>
                    <%= f.text_field :name, class: "form-control w-75", placeholder: "Nhập tên danh mục" %>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Ngày tạo:</strong>
                    <span><%= @category.created_at.strftime("%d/%m/%Y %H:%M") %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <strong>Ngày cập nhật:</strong>
                    <span><%= @category.updated_at.strftime("%d/%m/%Y %H:%M") %></span>
                </li>
            </ul>

            <!-- Buttons: Quay lại + Lưu thay đổi -->
            <div class="d-flex justify-content-between mt-3">
                <%= link_to "← Quay lại", admin_categories_path, class: "btn btn-outline-secondary flex-grow-1 me-2" %>
                <%= f.submit "Lưu thay đổi", class: "btn btn-success flex-grow-1 ms-2" %>
            </div>
            <% end %>

        </div>
    </div>
</div>