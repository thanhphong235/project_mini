<!-- ================= Hero Section ================= -->
<div class="bg-light p-5 rounded-3 text-center hero-section">
    <h1 class="display-4 mb-3">Welcome to Foods & Drinks App</h1>
    <p class="lead mb-4">Discover our delicious menu of foods and drinks!</p>

    <% if user_signed_in? %>
    <p class="lead mb-4">Hello, <%= current_user.name.presence || current_user.email %>!</p>
    <div class="d-flex justify-content-center gap-2 flex-wrap">
        <%= link_to "Xem Menu", food_drinks_path, class: "btn btn-primary btn-lg" %>
        <%= link_to "Đăng xuất", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Bạn chắc chắn muốn đăng xuất?" }, class: "btn btn-outline-danger btn-lg" %>
    </div>
    <% else %>
    <div class="d-flex justify-content-center gap-2 flex-wrap">
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>

    </div>
    <% end %>
</div>

<!-- ================= Optional Image or Illustration ================= -->

<style>
    .hero-section {
        background: #fff8f0;
        border-radius: 20px;
        padding: 60px 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .hero-section h1 {
        font-weight: 700;
        color: #ff6b6b;
    }

    .hero-section p.lead {
        font-size: 1.25rem;
        color: #555;
    }

    .hero-section .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

    .hero-section .btn-lg:hover {
        transform: translateY(-2px);
    }
</style>