<% provide(:title, "Log in") %>

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">

        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Log in</h2>

                <!-- Form login email/password -->
                <%= form_with(scope: :user, url: user_session_path, local: true) do |f| %>
                <!-- Email -->
                <div class="mb-3">
                    <%= f.label :email, class: "form-label" %>
                    <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Enter your email" %>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <%= f.label :password, class: "form-label" %>
                    <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
                    <small class="form-text text-muted">
                        <%= link_to "Forgot password?", new_user_password_path %>
                    </small>
                </div>

                <!-- Remember me -->
                <div class="form-check mb-3">
                    <%= f.check_box :remember_me, class: "form-check-input" %>
                    <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
                </div>

                <!-- Submit button -->
                <div class="d-grid mb-3">
                    <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
                </div>
                <% end %>

                <hr>

                <!-- Social login buttons full width -->
                <div class="d-grid gap-2 mb-3">
                    <%= button_to "Đăng nhập với Google",
              user_google_oauth2_omniauth_authorize_path,
              method: :post,
              class: "btn btn-outline-danger btn-lg w-100",
              form: { data: { turbo: false } } %>

                    <%= button_to "Sign in with Facebook",
              user_facebook_omniauth_authorize_path,
              method: :post,
              class: "btn btn-primary btn-lg w-100",
              form: { data: { turbo: false } } %>

                    <%= button_to "Sign in with Twitter",
              user_twitter_omniauth_authorize_path,
              method: :post,
              class: "btn btn-info text-white btn-lg w-100",
              form: { data: { turbo: false } } %>
                </div>

                <p class="text-center mb-0">
                    New user? <%= link_to "Sign up now!", new_user_registration_path %>
                </p>

            </div>
        </div>

    </div>
</div>