<div class="suggestion-detail premium-container-dark">

    <!-- Header -->
    <div class="header-wrapper">
        <%= link_to "← Quay lại", admin_suggestions_path, class: "btn-back-dark-glass" %>

        <h1 class="page-title-dark">Chi tiết Góp ý</h1>

        <div class="header-placeholder"></div>
    </div>

    <!-- Body -->
    <div class="detail-box-dark">

        <div class="detail-row-dark">
            <div class="detail-label-dark">Người gửi</div>
            <div class="detail-value-dark"><%= @suggestion.user.name || @suggestion.user.email %></div>
        </div>

        <div class="detail-row-dark">
            <div class="detail-label-dark">Tiêu đề</div>
            <div class="detail-value-dark"><%= @suggestion.title %></div>
        </div>

        <div class="detail-row-dark">
            <div class="detail-label-dark">Nội dung</div>
            <div class="detail-value-dark long-text-dark">
                <%= simple_format(@suggestion.content) %>
            </div>
        </div>

        <div class="detail-row-dark">
            <div class="detail-label-dark">Trạng thái</div>
            <div class="detail-value-dark">
                <span class="status-chip-dark <%= @suggestion.status %>">
                    <%= {
                        "pending"  => "Đang chờ xử lý",
                        "approved" => "Đã duyệt",
                        "rejected" => "Đã từ chối"
                    }[@suggestion.status] %>
                </span>
            </div>
        </div>

    </div>

    <div class="bottom-actions">
        <%= link_to "Sửa", edit_admin_suggestion_path(@suggestion), class: "btn-primary-dark" %>
    </div>

</div>


<style>
    /* ===========================
   PREMIUM ADMIN DARK MODE
   =========================== */

    .premium-container-dark {
        background: rgba(30, 30, 30, 0.55);
        border-radius: 28px;
        padding: 48px 50px;
        backdrop-filter: blur(12px) saturate(140%);
        -webkit-backdrop-filter: blur(12px) saturate(140%);
        border: 1px solid rgba(255, 255, 255, 0.08);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.55);
        max-width: 880px;
        margin: 50px auto;
        color: #f1f1f1;
    }

    /* Header */
    .header-wrapper {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 32px;
    }

    .page-title-dark {
        flex-grow: 1;
        text-align: center;
        font-size: 2.1rem;
        font-weight: 800;
        letter-spacing: -0.6px;
        color: #ffffff;
    }

    .btn-back-dark-glass {
        padding: 10px 22px;
        border-radius: 12px;
        font-weight: 500;
        background: rgba(255, 255, 255, 0.1);
        color: #f1f1f1;
        border: 1px solid rgba(255, 255, 255, 0.15);
        transition: 0.25s;
    }

    .btn-back-dark-glass:hover {
        background: rgba(255, 255, 255, 0.18);
        transform: translateY(-2px);
    }

    .header-placeholder {
        width: 120px;
    }

    /* Detail box */
    .detail-box-dark {
        display: flex;
        flex-direction: column;
        gap: 1.9rem;
    }

    .detail-row-dark {
        display: grid;
        grid-template-columns: 180px 1fr;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.12);
    }

    .detail-label-dark {
        font-size: 0.92rem;
        color: #c5c5c5;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.4px;
    }

    .detail-value-dark {
        font-size: 1.1rem;
        font-weight: 600;
        color: #ffffff;
    }

    .long-text-dark p {
        margin: 0;
        line-height: 1.65;
    }

    /* Status chip dark mode */
    .status-chip-dark {
        padding: 8px 18px;
        border-radius: 16px;
        font-weight: 700;
        font-size: 0.9rem;
        display: inline-block;
    }

    /* Dark gradients */
    .status-chip-dark.pending {
        background: linear-gradient(135deg, #5c4a1a, #a8842f);
        color: #ffe8a3;
    }

    .status-chip-dark.approved {
        background: linear-gradient(135deg, #1f4d2d, #2c7c49);
        color: #a7ffd2;
    }

    .status-chip-dark.rejected {
        background: linear-gradient(135deg, #5a1a1a, #8b2424);
        color: #ffb8b8;
    }

    /* Button primary */
    .btn-primary-dark {
        display: inline-block;
        padding: 12px 30px;
        background: linear-gradient(135deg, #4f7cff, #2e56d6);
        border-radius: 16px;
        font-weight: 700;
        color: white !important;
        text-decoration: none;
        box-shadow: 0 6px 20px rgba(60, 100, 255, 0.35);
        transition: 0.25s;
    }

    .btn-primary-dark:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(60, 100, 255, 0.45);
    }

    .bottom-actions {
        margin-top: 32px;
    }
</style>