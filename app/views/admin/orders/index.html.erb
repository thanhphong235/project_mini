<!-- Header giống Suggestions -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <%= link_to "Quay lại", admin_dashboard_path, class: "btn btn-outline-secondary" %>
    <h1 class="page-title text-center flex-grow-1 mb-0">Danh sách Đơn hàng</h1>
    <div class="header-placeholder"></div>
</div>

<!-- Flash messages -->
<%= turbo_frame_tag "flash_messages" do %>
<%= render "shared/flash_messages" %>
<% end %>


<!-- Orders Table Wrapper giống Suggestions -->
<div class="orders-wrapper table-responsive">
    <%= turbo_frame_tag "orders_table" do %>
    <table class="table table-striped table-hover align-middle orders-table">
        <thead class="table-dark">
            <tr>
                <th class="col-index">#</th>
                <th>Người đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Ngày đặt</th>
                <th class="col-actions">Hành động</th>
            </tr>
        </thead>

        <tbody>
            <% @orders.each_with_index do |order, index| %>
            <%= render partial: "order_row", locals: { order: order, index: index + 1 } %>
            <% end %>
        </tbody>
    </table>
    <% end %>
</div>